<Window x:Class="Segcapei.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Segcapei"
        mc:Ignorable="d"
        Title="Segcapei - Login" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <!-- Fondo con imagen -->
        <Grid.Background>
            <ImageBrush ImageSource="/Segcapei;component/Imagenes/login2.0.jpg"
                Stretch="UniformToFill"
                Opacity="0.8"/>
        </Grid.Background>

        <!-- Overlay oscuro -->
        <Rectangle Fill="Black" Opacity="0.4"/>

        <!-- Contenido principal -->
        <Border Background="#AA000000" 
                CornerRadius="15" 
                Width="350" 
                Height="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Título -->
                <TextBlock Text="SEGCAPEI" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <!-- Campo Username -->
                <TextBlock Text="Usuario:" 
                           Foreground="White" 
                           FontSize="14" 
                           Margin="0,0,0,5"/>
                <TextBox Name="TxtUsername" 
                         Height="35" 
                         FontSize="14"
                         Padding="10,5"
                         Margin="0,0,0,15"
                         Background="#AA333333"
                         Foreground="White"
                         BorderBrush="#FF1599ED"
                         BorderThickness="2"/>

                <!-- Campo Password -->
                <TextBlock Text="Contraseña:" 
                           Foreground="White" 
                           FontSize="14" 
                           Margin="0,0,0,5"/>
                <PasswordBox Name="TxtPassword" 
                             Height="35" 
                             FontSize="14"
                             Padding="10,5"
                             Margin="0,0,0,25"
                             Background="#AA333333"
                             Foreground="White"
                             BorderBrush="#FF1599ED"
                             BorderThickness="2"/>

                <!-- Botones -->
                <Button Name="BtnLogin" 
                        Content="Iniciar Sesión" 
                        Height="40" 
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#FF1599ED"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF0066CC"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="BtnRegister" 
                        Content="Registrarse" 
                        Height="40" 
                        FontSize="14"
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="#FF1599ED"
                        BorderBrush="#FF1599ED"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="BtnRegister_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#AA1599ED"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
