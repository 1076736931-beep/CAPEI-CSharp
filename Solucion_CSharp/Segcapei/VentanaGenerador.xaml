<Window x:Class="Segcapei.VentanaGenerador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generador de Contraseñas - SEGCAPEI"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF99B3C7">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🔐 Generador de Contraseñas"
                   FontSize="26" FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">

            <Border Background="#FF4D7690" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Configuración" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBlock Text="Longitud:" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Slider x:Name="SliderLongitud" Minimum="4" Maximum="32" Value="10" Width="200" ValueChanged="SliderLongitud_ValueChanged"/>
                        <TextBox x:Name="TxtLongitud" Text="10" Width="40" Margin="10,0,0,0" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <CheckBox x:Name="ChkMayusculas" Content="Mayúsculas" Margin="0,0,15,0" IsChecked="True" Foreground="White"/>
                        <CheckBox x:Name="ChkMinusculas" Content="Minúsculas" Margin="0,0,15,0" IsChecked="True" Foreground="White"/>
                        <CheckBox x:Name="ChkNumeros" Content="Números" Margin="0,0,15,0" IsChecked="True" Foreground="White"/>
                        <CheckBox x:Name="ChkSimbolos" Content="Símbolos" Margin="0,0,15,0" IsChecked="True" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBlock Text="Cantidad:" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                        <ComboBox x:Name="CmbCantidad" Width="100" SelectedIndex="0">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button x:Name="BtnGenerar" Content="Generar" Width="120" Margin="0,0,10,0" Click="BtnGenerar_Click"/>
                        <Button x:Name="BtnLimpiar" Content="Limpiar" Width="120" Margin="0,0,10,0" Click="BtnLimpiar_Click"/>
                        <Button x:Name="BtnCopiarTodas" Content="Copiar Todas" Width="130" Margin="0,0,10,0" Click="BtnCopiarTodas_Click"/>
                        <Button x:Name="BtnExportar" Content="Exportar" Width="120" Click="BtnExportar_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#FF4D7690" CornerRadius="10" Padding="15" Height="282">
                <StackPanel>
                    <TextBlock Text="Historial de Contraseñas Generadas" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                    <TextBlock x:Name="TxtEstadisticas" Text="Total generadas: 0" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                    <ListBox x:Name="ListaPasswords" Height="250">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="14" Margin="0,0,10,0" Foreground="White"/>
                                    <Button Content="Copiar" Tag="{Binding}" Width="70" Click="BtnCopiar_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>